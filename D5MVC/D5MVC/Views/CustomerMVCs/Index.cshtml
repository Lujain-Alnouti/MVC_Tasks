@model IEnumerable<D5MVC.Models.CustomerMVC>

@{
    ViewBag.Title = "Index";
}
@Html.Action("LastOrder")
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover table-striped" >
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Email
        </th>
        <th>
            Phone
        </th>
        <th>
           Age
        </th>
        <th>
           Job Title
        </th>
        <th>
            Gender
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.First_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Last_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.E_mail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Job_Title)
        </td>
        <td>
            @if (@item.Gender == true)
            {<span>Female</span>}
            else
            {
                <span> Male </span>
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Customer_ID },new {@class="btn btn-primary" }) 
            @Html.ActionLink("Details", "Details", new { id=item.Customer_ID }, new { @class = "btn btn-warning" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.Customer_ID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
